<Window x:Class="Examen.AddData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Examen"
        mc:Ignorable="d"
        Title="Добавление новых данных" Height="450" Width="800"  Icon="/гостиница (1).ico">
    <Grid>
        <Button Content="Назад" 
             FontWeight="Bold"
             Background="#67BA80"
             Click="CloseButton_Click" Margin="658,374,44,10"
          />

        <StackPanel Margin="10">

        <Label Content="Фамилия:"/>
        <TextBox x:Name="FamilyaTextBox" Margin="0,0,0,10" FontWeight="Bold"/>

        <Label Content="Имя:"/>
        <TextBox x:Name="ImyaTextBox" Margin="0,0,0,10" FontWeight="Bold"/>

        <Label Content="Отчество:"/>
        <TextBox x:Name="OtcgestvoTextBox" Margin="0,0,0,10" FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Сохранить" Width="75" Click="SaveButton_Click" Margin="5,0" />
                <Button Content="Отмена" Width="75" Click="CancelButton_Click" Margin="5,0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
